<%- include("partials/header") %> <%- include("partials/about-copy") %>
<script>
  document.getElementById("change-title").innerHTML = "Career";
  document.getElementById("change-breadcrumb").innerHTML = "Career";
</script>

<section class="career-section">
  <div class="container">
    <h2 class="career-title">CAREER</h2>
    <div class="separator"></div>

    <div class="row">
      <div class="inner-container">
        <!--Form Column-->
        <div class="col-md-8 col-sm-12 col-xs-12">
          <div class="inner-column">
            <!-- Contact Form -->
            <div class="career-form">
              <!--Default Form-->
              <form method="POST" action="/career/sent-email" id="contact-form" enctype="multipart/form-data" name="EmailForm">
                <div class="row">
                  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                    <input
                      type="text"
                      name="firstname"
                      placeholder="Name"
                      required=""
                    />
                  </div>

                  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                    <input
                      type="email"
                      name="email"
                      placeholder="E-Mail"
                      required=""
                    />
                  </div>

                  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                    <input
                      type="text"
                      name="phone"
                      placeholder="Phone"
                      required=""
                    />
                  </div>

                  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                    <input
                      type="text"
                      name="sub"
                      placeholder="Subject"
                      required=""
                    />
                  </div>

                  <div
                    class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group"
                  >
                    <textarea name="message" placeholder="Message"></textarea>
                  </div>

                  <div
                    class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group"
                  >
                    <input type="file" name="file" width="10px"/>
                  </div>

                  <div
                    class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group mt-5"
                  >
                    <button
                      class="btn btn-second p-3"
                      type="submit"
                      name="submitcontact"
                    >
                      Submit Now
                       <span> <i class="fa-solid fa-arrow-right-long"></i></span>
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <!--End Contact Form -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%-include("partials/footer") %> <%- include("partials/footer-end") %>
